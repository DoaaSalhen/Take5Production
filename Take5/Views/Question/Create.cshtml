@model Take5.Services.Models.MasterModels.QuestionModel

@{ ViewData["Title"] = "Create"; }
<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>
<script>function showAlert(type) {
        if (type == "Message") {
            var message = document.getElementById("message").value;
            swal(message, {
                icon: "success",
            });
        }
        else {
            var error = document.getElementById("error").value;
            swal(error, {
                icon: "success",
            });
        }


    }</script>

@if (TempData["Message"] != null)
{
<input type="hidden" id="message" value="@TempData["Message"]" />
                <script>showAlert("Message");</script> }
                            else if (TempData["Error"] != null)
                            {
                <input type="hidden" id="error" value="@TempData["Error"]" />
                                <script>showAlert("Error");</script>}
<h2>Add New Driver</h2>

<hr />

<div class="card">
    <div class="card-header">
        <h4 class="card-title"></h4>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Step" class="control-label">Step <span class="text-danger">*</span></label>
                        <Select asp-for="Step" class="form-control">
                            <option value="1">One</option>
                            <option value="2">Two</option>
                        </Select>
                        <span asp-validation-for="Step" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Text" class="control-label">Question <span class="text-danger">*</span></label>
                        <textarea asp-for="Text" class="form-control" placeholder="Write Question"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


