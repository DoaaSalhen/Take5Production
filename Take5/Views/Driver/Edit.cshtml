@model Take5.Services.Models.MasterModels.DriverModel

@{
    ViewData["Title"] = "Edit";
}
<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>

<script>
    function showAlert(type) {
        if (type == "Message") {
            var message = document.getElementById("message").value;
            swal(message, {
                icon: "success",
            });
        }
        else {
            var error = document.getElementById("error").value;
            swal(error, {
                icon: "success",
            });
        }


    }
</script>
@if (TempData["Message"] != null)
{
<input type="hidden" id="message" value="@TempData["Message"]" />
                <script>
                    showAlert("Message");
                </script>
 }
                            else if (TempData["Error"] != null)
                            {
                <input type="hidden" id="error" value="@TempData["Error"]" />
                                <script>
                                    showAlert("Error");
                                </script>
}

<h4>Edit Driver</h4>
<hr />

<div class="card">
    <div class="card-header">
        <h4 class="card-title"></h4>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form asp-action="Edit" asp-controller="Driver">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>
                            Driver Number
                        </label>
                        <input class="form-control" value="@Model.Id" readonly />
                        <input asp-for="Id" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            FullName  <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="FullName" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            Address  <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Address" class="form-control" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            PhoneNumber <span class="text-danger">*</span>
                        </label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            Active
                        </label>
                        <input asp-for="IsVisible" class="form-control" />
                        <span asp-validation-for="IsVisible" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
