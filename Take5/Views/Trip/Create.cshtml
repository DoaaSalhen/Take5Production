            var subItems = '';
            if ($(ddlsource).val() != -1) {
                var url = '@Url.Content("~/")' + "Take5/JobSite/GetDetails";
                $.getJSON(url, { id: $(ddlsource).val() }, function (data) {

                    var popup = '<b>Name:</b> ' + data['Name'] +
