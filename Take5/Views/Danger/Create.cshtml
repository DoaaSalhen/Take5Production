@model Take5.Services.Models.MasterModels.DangerModel

@{ ViewData["Title"] = "Create"; }
<style>
    .table,
    .form-group {
        color: black !important
    }
</style>
<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>
<script>function showAlert(type) {
        if (type == "Message") {
            var message = document.getElementById("message").value;
            swal(message, {
                icon: "success",
            });
        }
        else {
            var error = document.getElementById("error").value;
            swal(error, {
                icon: "success",
            });
        }


    }</script>

@if (TempData["Message"] != null)
{
<input type="hidden" id="message" value="@TempData["Message"]" />
                <script>showAlert("Message");</script> }
                            else if (TempData["Error"] != null)
                            {
                <input type="hidden" id="error" value="@TempData["Error"]" />
                                <script>showAlert("Error");</script>}
<h2>Add New Danger</h2>

<hr />
<div class="card">
    <div class="card-header">
        <h4 class="card-title"></h4>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="control-label">Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    @*<div class="form-group col-md-6">
                            <label asp-for="step" class="control-label">Step Number</label>
                            <Select asp-for="step" class="form-control">
                                <option value="1">One</option>
                                <option value="1">Two</option>
                            </Select>
                            <span asp-validation-for="step" class="text-danger"></span>
                        </div>*@
                    <div class="form-group col-md-6">
                        <label asp-for="Iconfile" class="control-label">Icon <span class="text-danger">*</span></label>
                        <input type="file" asp-for="Iconfile" class="form-control" />
                        <span asp-validation-for="Iconfile" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="DangerCategoryId" class="control-label">Category <span class="text-danger">*</span></label>
                        <select asp-for="DangerCategoryId" class="form-control" asp-items="@(new SelectList(Model.DangerCategoryModels, "Id", "Name"))"></select>
                        <span asp-validation-for="DangerCategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


