@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="sign-in" style="margin-top:50px">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/Take5-logo.png" alt="sing up image" width="1700" height="1200"></figure>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Login</h2>
                <form  method="post">
                    <div class="form-group">
                        <label><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" placeholder="EmployeeNumber" asp-for="Input.EmployeeNumber" />
                        <span asp-validation-for="Input.EmployeeNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" placeholder="Password" asp-for="Input.Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="keep-me-logged-in" asp-for="Input.RememberMe">
                        <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" style="background-color: #005580 !important; height:50px " value="Log in" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



